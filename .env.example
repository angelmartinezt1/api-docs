# =============================================================================
# API DOCS SERVER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and adjust values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3002
NODE_ENV=development
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
# Database type: 'sqlite' or 'mongodb'
DB_TYPE=mongodb
# MongoDB connection string (for MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name
# SQLite Database path (relative to server directory) - for fallback
DB_PATH=./data/database.sqlite
# Enable WAL mode for better concurrent access (SQLite only)
DB_WAL_MODE=true
# Enable foreign keys constraints (SQLite only)
DB_FOREIGN_KEYS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads (in bytes) - Default: 10MB
MAX_FILE_SIZE=10485760
# Storage directory for uploaded specs (relative to server directory)  
STORAGE_PATH=./storage/specs
# Allowed file extensions (comma separated)
ALLOWED_EXTENSIONS=.json

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma separated) - Use * for all origins in dev
CORS_ORIGINS=http://localhost:3002,https://d36kjm8ifn5guz.cloudfront.net,https://d3bj2prxa2zkqr.cloudfront.net,https://d26uet9f7b3hzf.cloudfront.net
# Allow credentials in CORS requests
CORS_CREDENTIALS=true

# =============================================================================
# STATIC FILES CONFIGURATION  
# =============================================================================
# Paths for static file serving (relative to server directory)
STATIC_ADMIN_PATH=../public-admin
STATIC_FRONT_PATH=../public-front  
STATIC_DOCS_PATH=../docs
STATIC_SPECS_PATH=./storage/specs

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Enable request logging
LOG_REQUESTS=true
# Enable SQL query logging
LOG_SQL_QUERIES=false

# =============================================================================
# MIGRATION CONFIGURATION
# =============================================================================
# Migrations directory (relative to server directory)
MIGRATIONS_PATH=./migrations
# Run migrations on startup
AUTO_MIGRATE=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable development mode features
DEV_MODE=true
# Enable hot reload for static files
HOT_RELOAD=false
# Enable detailed error responses
DETAILED_ERRORS=true

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# NODE_ENV=production
# LOG_LEVEL=warn
# LOG_SQL_QUERIES=false
# DEV_MODE=false
# DETAILED_ERRORS=false
# CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com